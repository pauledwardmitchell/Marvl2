    var user = $(this).attr('class').split(' ')[1]
    $.ajax({
      <%# TODO: janky alert! %>
        url: '/admin/users/'+user+'/roles',
        method: 'post',
        data: { role_id: <%= @memberrole_id %> }
      }).done(function(user_id){
        var marker = 'âœ…'
        $('tr.'+user_id+' td.membership').html(marker);
      });
  });

  $('a.promote-admin').on('click', function(){
