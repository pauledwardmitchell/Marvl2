<div class="form-group">

  <h2>Need to make a new password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  <br>
  <h5>If you are having trouble receiving this password reset email, please check your spam folder.  If you are unable to find it in the spam folder, please contact the administrator at cpamarvlapp@gmail.com.</h5>

</div>
