<h2>Create and publish a new forum post</h2>

<div class="form-group">
  <%= form_for @post do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :content %>
    <%= f.hidden_field :content, id: :content_body%>
    <trix-editor style="background-color: white;" input="content_body"></trix-editor><br>

    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "Publish post" %>
  <% end %>
</div>

